@model ProductTypes
@{
	ViewData["Title"] = "Details";
}
<h2>Details Product</h2>
<form asp-action="Details">
	<div class="p-4" rounded border>
		
		<div asp-validation-summary="All" class="text-danger">
		</div>
		<div class="form-group row">
			<div class="col-2">
				<label asp-for="ProductType"></label>
			</div>
			<div class="col-5">
				<input asp-for="ProductType" class="form-control" disabled />
				<span aps-valadation-for="ProductType" class="text-danger"></span>
			</div>

		</div>
		<div class="form-group">
			
			<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary"><i class="fa-solid fa-pen-to-square"></i>Edit</a>
			<a asp-action="Index" class="btn btn-dark">Back to List</a>
			
		</div>

	</div>
</form>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}