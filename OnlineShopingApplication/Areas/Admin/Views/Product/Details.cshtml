@model Products
@{
    ViewData["Title"] = "Details";
}



<h2>Details Product</h2>
<form asp-action="Details"  enctype="multipart/form-data">
    <div class="border rounded p-2">
        <div asp-validation-summary="All" class="text-danger">
        </div>
        <div class="row">
            <div class="col-md-8">
                <div class="p-4" rounded border>



                    <div class="form-group row mb-2">
                        <div class="col-2">
                            <label asp-for="Name"></label>
                        </div>
                        <div class="col-5">
                            <input type="hidden" asp-for="Id" />
                            <input asp-for="Name" class="form-control" readonly/>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                    </div>


                    <div class="form-group row mb-2">
                        <div class="col-2">
                            <label asp-for="Price"></label>
                        </div>
                        <div class="col-5">
                            <input asp-for="Price" class="form-control" readonly />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                    </div>


                    <div class="form-group row mb-2">
                        <div class="col-2">
                            <label asp-for="Image"></label>
                        </div>
                        <div class="col-5">
                            <input asp-for="Image" class="form-control" type="file" disabled />
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>

                    </div>


                    <div class="form-group row mb-2">
                        <div class="col-2">
                            <label asp-for="ProductColor"></label>
                        </div>
                        <div class="col-5">
                            <input asp-for="ProductColor" class="form-control" readonly />
                            <span asp-validation-for="ProductColor" class="text-danger"></span>
                        </div>

                    </div>


                    <div class="form-group row mb-2">
                        <div class="col-2">
                            <label asp-for="StockQuantity"></label>
                        </div>
                        <div class="col-5">
                            <input asp-for="StockQuantity" class="form-control" readonly />
                            <span asp-validation-for="StockQuantity" class="text-danger"></span>
                        </div>

                    </div>


                    <div class="form-group row mb-2">
                        <div class="col-2">
                            <label asp-for="DateAdded"></label>
                        </div>
                        <div class="col-5">
                            <input asp-for="DateAdded" class="form-control" type="date" readonly />
                            <span asp-validation-for="DateAdded" class="text-danger"></span>
                        </div>

                    </div>


                    <div class="form-group row mb-2">
                        <div class="col-2">
                            <label asp-for="ProductTypesId"></label>
                        </div>
                        <div class="col-5">
                            <select asp-for="ProductTypesId" class="form-control" asp-items="ViewBag.ProductTypesId" disabled>
                                <option value="">-- Select Product Type --</option>
                            </select>
                            <span asp-validation-for="ProductTypesId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row mb-2">
                        <div class="col-2">
                            <label asp-for="SpecialTagsId"></label>
                        </div>
                        <div class="col-5">
                            <select asp-for="SpecialTagsId" class="form-control" asp-items="ViewBag.SpecialTagsId" disabled>
                                <option value="">-- Select Special Tag --</option>
                            </select>
                            <span asp-validation-for="SpecialTagsId" class="text-danger"></span>
                        </div>
                    </div>




                    <div class="form-group row mb-2">
                        <div class="col-2">
                            <label asp-for="IsAvailable"></label>
                        </div>
                        <div class="col-5 d-flex align-items-center">
                            <input asp-for="IsAvailable" class="form-check-input me-2" type="checkbox" disabled />
                            <span asp-validation-for="IsAvailable" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>

                        <a asp-action="Index" class="btn btn-success">Back to List</a>
                    </div>


                </div>
            </div>

            <div class="col-md-4">
               
                <img src="@(Url.Content("~/"+Model.Image))" width="100%" class="img-thumbnail" />

            </div>
        </div>

    </div>

</form>






@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}