@model Products
@{
    ViewData["Title"] = "Create";
}



<h2>Create Product</h2>
<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="p-4" rounded border>
        <div asp-validation-summary="All" class="text-danger">
        </div>

        <h2>@TempData["message"]</h2>

        <div class="form-group row mb-2">
            <div class="col-2">
                <label asp-for="Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

        </div>


        <div class="form-group row mb-2">
            <div class="col-2">
                <label asp-for="Price"></label>
            </div>
            <div class="col-5">
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

        </div>


        <div class="form-group row mb-2">
            <div class="col-2">
                <label asp-for="Image"></label>
            </div>
            <div class="col-5">
                <input asp-for="Image" class="form-control" type="file" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

        </div>


        <div class="form-group row mb-2">
            <div class="col-2">
                <label asp-for="ProductColor"></label>
            </div>
            <div class="col-5">
                <input asp-for="ProductColor" class="form-control" />
                <span asp-validation-for="ProductColor" class="text-danger"></span>
            </div>

        </div>


        <div class="form-group row mb-2">
            <div class="col-2">
                <label asp-for="StockQuantity"></label>
            </div>
            <div class="col-5">
                <input asp-for="StockQuantity" class="form-control" />
                <span asp-validation-for="StockQuantity" class="text-danger"></span>
            </div>

        </div>


        <div class="form-group row mb-2">
            <div class="col-2">
                <label asp-for="DateAdded"></label>
            </div>
            <div class="col-5">
                <input asp-for="DateAdded" class="form-control" type="date" />
                <span asp-validation-for="DateAdded" class="text-danger"></span>
            </div>

        </div>


        <div class="form-group row mb-2">
            <div class="col-2">
                <label asp-for="ProductTypesId"></label>
            </div>
            <div class="col-5">
                <select asp-for="ProductTypesId" class="form-control" asp-items="ViewBag.ProductTypesId">
                    <option value="">-- Select Product Type --</option>
                </select>
                <span asp-validation-for="ProductTypesId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row mb-2">
            <div class="col-2">
                <label asp-for="SpecialTagsId"></label>
            </div>
            <div class="col-5">
                <select asp-for="SpecialTagsId" class="form-control" asp-items="ViewBag.SpecialTagsId">
                    <option value="">-- Select Special Tag --</option>
                </select>
                <span asp-validation-for="SpecialTagsId" class="text-danger"></span>
            </div>
        </div>




        <div class="form-group row mb-2">
            <div class="col-2">
                <label asp-for="IsAvailable"></label>
            </div>
            <div class="col-5 d-flex align-items-center">
                <input asp-for="IsAvailable" class="form-check-input me-2" type="checkbox" />
                <span asp-validation-for="IsAvailable" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Save" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>


    </div>

</form>






@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}