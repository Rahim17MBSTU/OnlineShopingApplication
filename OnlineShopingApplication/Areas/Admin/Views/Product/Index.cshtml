@model IEnumerable<Products>
@{
    ViewData["Title"] = "Index";
}
<br />
<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Products List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info">
            <i class="fa-solid fa-plus"></i> Create Product 
        </a>
    </div>
</div>

<table class="table table-bordered table-dark" style="width: 100%">
    <thead class="thead-dark">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
				@Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductColor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsAvailable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StockQuantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateAdded)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductTypes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SpecialTags)
            </th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Image</td>
                <td>@product.ProductColor</td>
                <td>@product.IsAvailable</td>
                <td>@product.StockQuantity</td>
                <td>@product.DateAdded</td>
                <td>@product.ProductTypes</td>
                <td>@product.SpecialTags</td>
                <td>
                    <partial name="_ButtonPartialView" model="@product.Id" />
                </td>
            </tr>
        }

    </tbody>
</table>



@section Scripts {
    <script src="https://kit.fontawesome.com/your-kit-code.js" crossorigin="anonymous"></script>
    <!-- JavaScript -->
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.14.0/build/alertify.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.table').DataTable();
        });
    </script>
    <script type="text/javascript">
        $(function() {
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
                            alertify.set('notifier', 'position', 'top-right');
                            alertify.success('@Html.Raw(TempData["SuccessMessage"])');
                @{
                    // Clear immediately after display
                    TempData.Remove("SuccessMessage");
                }
            </text>
        }
        });
    </script>
}